<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_task.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>

  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>

  <%= f.label :status, '進捗' %>
  <%= f.text_field :status %>
<% end %>